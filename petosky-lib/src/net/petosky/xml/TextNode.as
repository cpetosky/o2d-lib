package net.petosky.xml {	/**	 * @author cpetosky	 */	public class TextNode extends ContentNode {		private var _text:String;				public function TextNode(parent:Element, text:String) {			super(parent, parent.name + "->Text");			_text = text;		}				public function get text():String {			return toString();		}				public function set text(value:String):void {			_text = value;		}				public override function toString(tabLevel:uint = 0):String {			var s:String = "";			for (var i:uint = 0; i < tabLevel; ++i)				s += "\t";			return s + _text;		}				public override function get type():String {			return NodeType.TEXT;		}	}}