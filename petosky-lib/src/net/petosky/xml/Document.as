package net.petosky.xml {	/**	 * @author cpetosky	 */	public class Document {		public static var ignoreInlineTags:Boolean = true;		private var _root:Element;				public function Document(content:XML) {			XML.ignoreComments = true;			XML.ignoreProcessingInstructions = true;			XML.ignoreWhitespace = true;						_root = new Element(null, content);		}				public function get root():Element {			return _root;		}				public function toString():String {			return _root.toString();		}	}}