package net.petosky.xml {	import net.petosky.util.StringUtils;			import flash.errors.IllegalOperationError;			/**	 * @author cpetosky	 */	public class Node {		private var _parent:Element;		private var _name:String;				public function Node(parent:Element, name:String) {			_parent = parent;			_name = name;		}				public function get parent():Element {			return _parent;		}				public function get name():String {			return _name;		}				public function get type():String {			throw new IllegalOperationError("[Node.get type] This method is abstract and must be overridden.");		}				public function toString(tabLevel:uint = 0):String {			return StringUtils.repeat("\t", tabLevel) + "UNTYPED NODE";		}	}}