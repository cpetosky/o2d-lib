package net.petosky.xml {	import flash.events.Event;			import net.petosky.xml.style.CascadingStyleSheet;			import flash.display.Sprite;				/**	 * @author cpetosky	 */	public class DocumentRenderer extends Sprite {		private var _doc:Document;		private var _style:CascadingStyleSheet;		private var _width:Number;		public function DocumentRenderer(doc:Document, style:CascadingStyleSheet, width:Number = 0) {			_doc = doc;			_style = style;			_width = width;			addEventListener(Event.ADDED_TO_STAGE, render, false, 0, true);		}				public function render(event:Event = null):void {			while (numChildren > 0)				removeChildAt(0);			addChild(new ElementRenderer(_doc.root, _style, _width));		}	}}