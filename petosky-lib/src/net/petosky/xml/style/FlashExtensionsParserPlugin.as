package net.petosky.xml.style {	import net.petosky.xml.style.parsers.FilterParser;		import net.petosky.xml.style.IStyleParserPlugin;	import net.petosky.xml.style.parsers.ColorParser;	import net.petosky.xml.style.parsers.ArrayParser;	import net.petosky.xml.style.parsers.BooleanParser;		/**	 * @author cpetosky	 */	final public class FlashExtensionsParserPlugin implements IStyleParserPlugin {		public function get author():String {			return "Cory Petosky";		}				public function get version():String {			return "0.1";		}				public function get parsers():Object {			return {				color: ColorParser.parseARGB,				alpha: ColorParser.parseAlpha,				sharpness: parseInt,				backgroundColor: ColorParser.parseARGB,				backgroundAlpha: ColorParser.parseAlpha,				tabStops: ArrayParser.parseFloats,				bullet: BooleanParser.parseString,				leading: parseFloat,				kerning: BooleanParser.parseString,				blockIndent: parseInt,				filterBevel: FilterParser.parseBevel,				filterBlur: FilterParser.parseBlur,				filterDropShadow: FilterParser.parseDropShadow,				filterGlow: FilterParser.parseGlow,				multiline: BooleanParser.parseString			};		}				public function get shorthands():Object {			return {				// Color shorthands				backgroundColor: {backgroundColor: "color", backgroundAlpha: "alpha"},				color: {color: "color", alpha: "alpha"}						};		}				public function get defaults():Object {			return {				alpha: "100%",				sharpness: 0,					backgroundAlpha: "100%",				bullet: false,				leading: 0,				kerning: 0,				blockIndent: 0,				multiline: true			};		}				public function get inheritables():Array {			return [				"sharpness",				"leading",				"kerning"			];		}	}}