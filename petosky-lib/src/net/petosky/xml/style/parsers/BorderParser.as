package net.petosky.xml.style.parsers {	/**	 * @author cpetosky	 */	final public class BorderParser {		public static function parseWidth(s:String):int {			switch (s) {				case "thin":					return 1;				case "medium":					return 3;				case "thick":					return 5;				default:					return parseInt(s);			}		}				public static function parseWidths(s:String):Object {			return BoxParser.parseDirections(s, parseWidth);		}		public static function parseStyle(s:String):String {			if (s == "none")				return "none";			return "solid";		}				public static function parseStyles(s:String):Object {			return BoxParser.parseDirections(s, parseStyle);		}				public static function parse(s:String):Object {			var a:Array = s.split(" ");			return {				width: a[0],				style: a[1],				color: a[2]			};		}	}}