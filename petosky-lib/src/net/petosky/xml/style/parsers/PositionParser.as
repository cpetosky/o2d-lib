package net.petosky.xml.style.parsers {	/**	 * @author cpetosky	 */	final public class PositionParser {		public static function parse(src:String):Array {			var vals:Array = src.split(" ");			var a:Array = new Array();						var i:uint = 0;			while (i < vals.length) {				var s:String = vals[i];				if (s == "top" || s == "center" || s == "bottom")					a.push({						valign: vals[i++],						halign: vals[i++],						x: parseFloat(vals[i++]),						y: parseFloat(vals[i++])					});				else					a.push({						x: parseFloat(vals[i++]),						y: parseFloat(vals[i++])					});			}			return a;		}	}}