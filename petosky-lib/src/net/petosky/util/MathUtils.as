package net.petosky.util {	/**	 * @author cpetosky	 */	final public class MathUtils {		public static function distance(x1:Number, y1:Number, x2:Number, y2:Number):Number {			return Math.sqrt(Math.pow(x2 - x1, 2) + Math.pow(y2 - y1, 2));		}								public static function arcDistance(r:Number, t1:Number, t2:Number):Number {			return r * Math.sqrt(2 * (1 - Math.cos(t1 - t2)));		}								public static function absSqrt(n:Number):Number {			return n > 0 ? Math.sqrt(n) : -Math.sqrt(-n);		}								public static function degreesToRadians(d:Number):Number {			return (d / 180) * Math.PI;		}								public static function radiansToDegrees(r:Number):Number {			return (r / (Math.PI)) * 180;		}	}}