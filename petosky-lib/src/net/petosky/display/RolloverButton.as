package net.petosky.display {	import flash.display.MovieClip;	import flash.events.MouseEvent;	/**	 * A RolloverButton automatically plays rollover and rollout timeline	 * tweens when the mouse rolls over and out of the object. The button	 * detects frame labels and injects frame scripts telling the timeline	 * how to play.	 * 	 * @author cpetosky	 */	public class RolloverButton extends MovieClip {		private var _outLabel:String;		private var _overLabel:String;				public function RolloverButton(outLabel:String = "out", overLabel:String = "over") {			_outLabel = outLabel;			_overLabel = overLabel;			stop();			addEventListener(MouseEvent.ROLL_OVER, rollOverHandler, false, 0, true);			addEventListener(MouseEvent.ROLL_OUT, rollOutHandler, false, 0, true);						for (var i:uint = 0; i < currentLabels.length; ++i) {				if (currentLabels[i].name == outLabel) {					addFrameScript(currentLabels[i].frame - 2, stop);					break;					}				}			addFrameScript(totalFrames - 1, stop);		}				private function rollOverHandler(event:MouseEvent):void {			gotoAndPlay(_overLabel);		}				private function rollOutHandler(event:MouseEvent):void {			gotoAndPlay(_outLabel);		}	}}